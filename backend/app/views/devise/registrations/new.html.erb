<title>Registarse - Textgram</title>

<div class="row">
    <div class="col-md-5 mx-auto py-3 card">
    <h2>Registrarse</h2>
    <hr/>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input-group my-2">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">@</span>
        </div>
        <input name="user[nickname]" type="text" autofocus="autofocus" placeholder="usuario" class="form-control" required>
    </div>
    <div class="form-group my-2">
        <%= f.label(:email, "Email") %>
        <input name="user[email]" type="email" autofocus="autofocus" placeholder="example@site.com" class="form-control" required>
    </div>

    <div class="form-group my-2">
        <%= f.label(:password, "Contraseña") %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Mínimo 6 caracteres" %>
    </div>

    <div class="form-group my-2">
        <%= f.label(:password, "Confirme su contraseña") %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group mt-5">
        <button type="submit" name="commit" class="btn btn-success">Completar registro</button>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
</div>
